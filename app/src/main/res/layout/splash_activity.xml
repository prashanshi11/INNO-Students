<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E27"
    android:gravity="center">

    <ImageView
        android:id="@+id/inno"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/splash_background"
        android:contentDescription="InnoStudents Logo" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="INNOSTUDENTS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" /> <!-- Changed to visible -->

    <TextView
        android:id="@+id/tagline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="From First Spark to First Spotlight."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="visible" /> <!-- Changed to visible -->
</RelativeLayout>